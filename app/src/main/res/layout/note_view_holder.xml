<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent" android:layout_height="155dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/d_date_label"
                android:layout_marginTop="122dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="App. Date: "
                />

            <TextView
                android:id="@+id/d_date"
                android:layout_marginTop="122dp"
                android:layout_marginLeft="85dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="date"
                />


            <TextView
                android:id="@+id/d_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="122dp"
                android:layout_marginLeft="200dp"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="Time: "
                />

            <TextView
                android:id="@+id/d_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="122dp"
                android:layout_marginLeft="240dp"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="time"
                />

            <TextView
                android:id="@+id/d_service_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="13dp"
                android:textColor="#FF0000"
                android:text="Services Required: "
                />


            <TextView
                android:id="@+id/d_service_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="15dp"
                android:textSize="13dp"
                android:textColor="#FF0000"
                android:text="Extra Services : "
                />

            <TextView
                android:id="@+id/d_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="125dp"
                android:textSize="13dp"
                android:textColor="#000000"
                android:text="services"
                />

            <TextView
                android:id="@+id/d_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="110dp"
                android:textSize="13dp"
                android:textColor="#000000"
                android:text="services"
                />

            <TextView
                android:id="@+id/d_cost_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="15dp"
                android:textSize="13dp"
                android:textColor="#FF0000"
                android:text="Total Cost:"
                />



            <TextView
                android:id="@+id/d_cost"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="82dp"
                android:textSize="13dp"
                android:textColor="#000000"
                android:text="total cost"
                />

            <TextView
                android:id="@+id/d_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="160dp"
                android:textSize="13dp"
                android:textColor="#FF0000"
                android:text="Status:"
                />
            <TextView
                android:id="@+id/d_status"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="205dp"
                android:textSize="13dp"
                android:textColor="#000000"
                android:text="status"
                />




            <TextView
                android:id="@+id/d_cancel"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="3dp"
                android:textAlignment="center"
                android:clickable="true"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="300dp"
                android:textSize="15dp"
                android:background="#FF0000"
                android:textColor="#fff"
                android:text="Cancel"
                />

            <ImageView
                android:id="@+id/accepted_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="340dp"
                app:srcCompat="@drawable/accepted_appoint" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>