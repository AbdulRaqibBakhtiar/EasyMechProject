<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent" android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/d_name_label"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#0277BD"
                android:text="Name:"
                />

            <TextView
                android:id="@+id/d_name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#0277BD"
                android:text="driver name"
                />


            <TextView
                android:id="@+id/d_date_label"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="235dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="App. Date: "
                />

            <TextView
                android:id="@+id/d_date"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="307dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="date"
                />

            <TextView
                android:id="@+id/d_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:textColor="#0277BD"
                android:text="Mobile: "
                />

            <TextView
                android:id="@+id/d_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="70dp"
                android:textSize="15dp"
                android:textColor="#0277BD"
                android:text="mobile number"
                />

            <TextView
                android:id="@+id/d_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="235dp"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="Time: "
                />

            <TextView
                android:id="@+id/d_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="280dp"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="time"
                />

            <TextView
                android:id="@+id/d_service_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:textSize="13dp"
                android:textColor="#FF0000"
                android:text="Services Required: "
                />


            <TextView
                android:id="@+id/d_service_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="15dp"
                android:textSize="13dp"
                android:textColor="#FF0000"
                android:text="Car Plate : "
                />

            <TextView
                android:id="@+id/d_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="125dp"
                android:textSize="13dp"
                android:textColor="#000000"
                android:text="services"
                />

            <TextView
                android:id="@+id/d_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="85dp"
                android:textSize="13dp"
                android:textColor="#000000"
                android:text="plate"
                />

            <TextView
                android:id="@+id/d_cost_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="15dp"
                android:textSize="13dp"
                android:textColor="#FF0000"
                android:text="Total cost:"
                />

            <TextView
                android:id="@+id/d_cost"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="82dp"
                android:textSize="13dp"
                android:textColor="#000000"
                android:text="total cost"
                />


            <TextView
                android:id="@+id/d_accept"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="3dp"
                android:textAlignment="center"
                android:layout_marginTop="105dp"
                android:clickable="true"
                android:layout_marginLeft="300dp"
                android:visibility="visible"
                android:background="#0277BD"
                android:textSize="15dp"
                android:textColor="#fff"
                android:text="Accept"
                />

            <TextView
                android:id="@+id/d_cancel"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="3dp"
                android:textAlignment="center"
                android:layout_marginTop="90dp"
                android:clickable="true"
                android:layout_marginLeft="300dp"
                android:visibility="gone"
                android:background="#0277BD"
                android:textSize="15dp"
                android:textColor="#fff"
                android:text="Cancel"
                />

            <TextView
                android:id="@+id/d_reject"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textAlignment="center"
                android:clickable="true"
                android:layout_marginTop="105dp"
                android:layout_marginLeft="215dp"
                android:textSize="15dp"
                android:background="#FF0000"
                android:textColor="#fff"
                android:text="Reject"
    />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>