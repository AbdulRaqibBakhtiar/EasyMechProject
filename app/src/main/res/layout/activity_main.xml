<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/easymech_start"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/start_up_backgroud"
        android:layout_width="241dp"
        android:layout_height="241dp"
        android:layout_marginTop="194dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/name7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/easymech_icon" />

    <TextView
        android:id="@+id/name7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="209dp"
        android:fontFamily="sans-serif-light"
        android:text="EasyMech"
        android:textColor="#fff"
        android:textSize="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/start_up_backgroud"
        app:layout_constraintTop_toBottomOf="@+id/start_up_backgroud" />


</androidx.constraintlayout.widget.ConstraintLayout>